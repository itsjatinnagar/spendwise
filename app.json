{
  "expo": {
    "name": "Spendwise",
    "slug": "spendwise",
    "version": "2.3.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "spendwise",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF",
        "foregroundImage": "./assets/images/icon.png",
        "monochromeImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "resize",
      "predictiveBackGestureEnabled": false,
      "package": "com.itsjatinnagar.spendwise",
      "versionCode": 4
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ],
      "expo-sqlite",
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "Poppins",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Poppins-Thin.ttf",
                    "weight": 100
                  },
                  {
                    "path": "./assets/fonts/Poppins-ThinItalic.ttf",
                    "weight": 100,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-ExtraLight.ttf",
                    "weight": 200
                  },
                  {
                    "path": "./assets/fonts/Poppins-ExtraLightItalic.ttf",
                    "weight": 200,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-Light.ttf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/Poppins-LightItalic.ttf",
                    "weight": 300,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/Poppins-Italic.ttf",
                    "weight": 400,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/Poppins-MediumItalic.ttf",
                    "weight": 500,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-SemiBold.ttf",
                    "weight": 600
                  },
                  {
                    "path": "./assets/fonts/Poppins-SemiBoldItalic.ttf",
                    "weight": 600,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-Bold.ttf",
                    "weight": 700
                  },
                  {
                    "path": "./assets/fonts/Poppins-BoldItalic.ttf",
                    "weight": 700,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-ExtraBold.ttf",
                    "weight": 800
                  },
                  {
                    "path": "./assets/fonts/Poppins-ExtraBoldItalic.ttf",
                    "weight": 800,
                    "style": "italic"
                  },
                  {
                    "path": "./assets/fonts/Poppins-Black.ttf",
                    "weight": 900
                  },
                  {
                    "path": "./assets/fonts/Poppins-BlackItalic.ttf",
                    "weight": 900,
                    "style": "italic"
                  }
                ]
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
